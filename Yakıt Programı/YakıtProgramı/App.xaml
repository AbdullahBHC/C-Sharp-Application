<Application x:Class="YakıtProgramı.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:YakıtProgramı"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <Style x:Key="TextBlockStyle" TargetType="TextBlock">
            <Setter Property="Width" Value="100"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="TxDpStyle" TargetType="Control">
            <Setter Property="Width" Value="120"/>
        </Style>

        <Style x:Key="SpStyle" TargetType="StackPanel">
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="BtnStyle" TargetType="Button">
            <Setter Property="Content" Value="Kaydet"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Margin" Value="20"/>
        </Style>

        <Style x:Key="BackgroundStyle" TargetType="Page">
            <Setter Property="Background" Value="Black"/>
        </Style>
    </Application.Resources>
</Application>
