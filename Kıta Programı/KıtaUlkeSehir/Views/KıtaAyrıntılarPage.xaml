<Page x:Class="KıtaUlkeSehir.Views.KıtaAyrıntılarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KıtaUlkeSehir.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="KıtaAyrıntılarPage">

    <Grid>
        <Button Content="&lt; Geri &lt;" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="50" x:Name="BtnGeri"/>
        <StackPanel Style="{StaticResource SpStyle}">
            <StackPanel Style="{StaticResource SpStyle2}">
                <TextBlock Text="Kıta Adı :"/>
                <TextBlock x:Name="TbKıta"/>
            </StackPanel>

            <StackPanel Style="{StaticResource SpStyle2}">
                <TextBlock Text="Kıta Yüz Ölçümü :"/>
                <TextBlock x:Name="TbYuzOlcumu"/>
            </StackPanel>

            <StackPanel Style="{StaticResource SpStyle2}">
                <TextBlock Text="Kıta Resim :" VerticalAlignment="Top"/>
                <Image x:Name="ImgKıtaResim" Width="75" Height="75"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
