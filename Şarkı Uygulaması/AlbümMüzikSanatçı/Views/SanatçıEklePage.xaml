<Page x:Class="AlbümMüzikSanatçı.Views.SanatçıEklePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AlbümMüzikSanatçı.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SanatçıEklePage">

    <Grid>
        <StackPanel Style="{StaticResource SpStyle}">

            <TextBlock Text="S A N A T Ç I   K A Y I T" Style="{StaticResource TbSüsStyle}"/>
            <Separator Margin="0,0,0,10"/>
            
            <StackPanel Style="{StaticResource SpStyle2}">
                <TextBlock Text="Sanatçı Adı :" />
                <TextBox x:Name="TxSanatçıAdı"/>
            </StackPanel>

            <StackPanel Style="{StaticResource SpStyle2}">
                <TextBlock Text="Sanatçı Resmi :"/>
                <Button x:Name="BtnGözat" Content="Gözat..." Margin="5,0,0,0"/>
            </StackPanel>
            
            <Image x:Name="ImgSanatçı" Width="75" Height="75" Margin="5,10"/>

            <Separator Margin="0,10,0,5"/> 
            <Button x:Name="BtnKaydet" Style="{StaticResource SaveButtonStyle}"/> 

        </StackPanel>
    </Grid>
</Page>
