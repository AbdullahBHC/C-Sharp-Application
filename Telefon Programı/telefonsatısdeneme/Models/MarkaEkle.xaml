<Page x:Class="telefonsatısdeneme.Models.MarkaEkle"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:telefonsatısdeneme.Models"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MarkaEkle" Background="White">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Marka Adı :" Width="120"/>
                <TextBox x:Name="TxMarka" Width="80"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5,0,5,5">
                <TextBlock Text="Kuruluş Yılı:" Width="120"/>
                <TextBox x:Name="TxKuruluşYılı" Width="80"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5,0,5,5">
                <TextBlock Text="Marka Adı :" Width="120"/>
                <Button x:Name="BtnGözat" Width="50" Content="Gözat..."/>
            </StackPanel>
            <StackPanel>
                <Image Width="75" Height="75" x:Name="ImgResim"/>
                <Button Content="Kaydet" Margin="0,10" Width="100" x:Name="BtnKaydet"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
